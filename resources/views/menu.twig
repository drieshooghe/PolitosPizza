<!doctype html>
<!--resources/views/menu.twig-->
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Polito's</title>
    <link rel="stylesheet" href="{{ path('/public/style/css/main.css') }}" type="text/css"/>

</head>
<body>
<header class="container">
    <nav>
        <label for="menu-toggle" id="navlabel"><img src="{{ path("/img/navbar-toggle-dark.svg") }}" alt=""></label>
        <input type="checkbox" id="menu-toggle"/>
        <ul id="menu">
            <li><a href="{{ home }}">HOME</a></li>
            <li><a href="{{ login }}">INLOGGEN</a></li>
            <li class="header_logo"><img src="{{ path("/img/pp_logo_font.svg") }}" alt=""></li>
            <li class="active"><a class="active" href="{{ menu }}">BESTELLEN</a></li>
            <li><a href="{{ info }}">INFO</a></li>
        </ul>
    </nav>
    <section class="subheader">
        <div><h4><a href="{{ login }}">{{  loginValue }}</a></h4></div>
        <div><img id="logo" src="{{ path("/img/pp_logo_font_original.svg") }}" alt=""></div>
        <div><img id="status" src="{{ path("/img/status/" ~ status ~ ".svg") }}" /></div>
    </section>
</header>

<section id="menu">

    <span id="dishes">

        <label for="entrees-toggle" id="entreeslabel">VOORGERECHTEN</label>
        <input type="checkbox" id="entrees-toggle"/>
        <div id="entrees" class="foodblock">
            {% for item in entrees %}
                    <div class="dish">
                        <table>
                            <tr>
                                <th colspan="2">{{ item.Name }}</th>
                            </tr>
                            <tr>
                                <td class="small">{{ item.Desc }}</td>
                                <td rowspan="2">
                                    <form action="{{ menu }}" method="GET">
                                        <input type="hidden" name="id" value="{{ item.Id }}">
                                        Aantal: <br/><input class="amount" type="number" name="quantity" value="Aantal" min=0>
                                        <input type="submit" value="+">
                                    </form>
                                </td>
                            </tr>
                            <tr>
                                <td  class="small">Prijs: €{{ item.Price }}</td>
                            </tr>

                            </tr>
                        </table>
                    </div>
                {%  endfor %}
        </div>

        <label for="pizza-toggle" id="pizzalabel">PIZZA'S</label>
        <input type="checkbox" id="pizza-toggle"/>
        <div id="pizza" class="foodblock">
            {% for item in pizza %}
                <div class="dish">
                        <table>
                            <tr>
                                <th colspan="2">{{ item.Name }}</th>
                            </tr>
                            <tr>
                                <td>{{ item.Desc }}</td>
                                <td rowspan="2">
                                    <form action="{{ menu }}" method="GET">
                                        <input type="hidden" name="id" value="{{ item.Id }}">
                                        <select name="sizeId">
                                            <option value="2">Small</option>
                                            <option value="3">Medium</option>
                                            <option value="4">Large</option>
                                        </select><br/><br/>

                                        Aantal: <br/><input class="amount" type="number" name="quantity" value="Aantal" min=0>
                                        <input type="submit" value="+">
                                    </form>
                                </td>
                            </tr>
                            <tr>
                                <td>Prijs:<br/> €{{ item.Price }}</td>
                            </tr>

                            </tr>
                        </table>
                    </div>
            {%  endfor %}
        </div>

        <label for="pasta-toggle" id="pastalabel">PASTA'S</label>
        <input type="checkbox" id="pasta-toggle"/>
        <div id="pasta" class="foodblock">
            {% for item in pasta %}
                <div class="dish">
                        <table>
                            <tr>
                                <th colspan="2">{{ item.Name }}</th>
                            </tr>
                            <tr>
                                <td class="small">{{ item.Desc }}</td>
                                <td rowspan="2">
                                    <form action="{{ menu }}" method="GET">
                                        <input type="hidden" name="id" value="{{ item.Id }}">
                                        Aantal: <br/><input class="amount" type="number" name="quantity" value="Aantal" min=0>
                                        <input type="submit" value="+">
                                    </form>
                                </td>
                            </tr>
                            <tr class="small">
                                <td>Prijs: €{{ item.Price }}</td>
                            </tr>

                            </tr>
                        </table>
                    </div>
            {%  endfor %}
        </div>

        <label for="dessert-toggle" id="dessertlabel">DESSERTS</label>
        <input type="checkbox" id="dessert-toggle"/>
        <div id="dessert" class="foodblock">
            {% for item in dessert %}
                <div class="dish">
                        <table>
                            <tr>
                                <th colspan="2">{{ item.Name }}</th>
                            </tr>
                            <tr>
                                <td>{{ item.Desc }}</td>
                                <td rowspan="2">
                                    <form action="{{ menu }}" method="GET">
                                        <input type="hidden" name="id" value="{{ item.Id }}">
                                        Aantal: <br/><input class="amount" type="number" name="quantity" value="Aantal" min=0>
                                        <input type="submit" value="+">
                                    </form>
                                </td>
                            </tr>
                            <tr>
                                <td>Prijs: €{{ item.Price }}</td>
                            </tr>

                            </tr>
                        </table>
                    </div>
            {%  endfor %}
        </div>

        <label for="drinks-toggle" id="drinkslabel">DRANKEN</label>
        <input type="checkbox" id="drinks-toggle"/>
        <div id="drinks" class="foodblock">
            {% for item in drinks %}
                <div class="dish">
                        <table>
                            <tr>
                                <th colspan="2">{{ item.Name }}</th>
                            </tr>
                            <tr>
                                <td>{{ item.Desc }}</td>
                                <td rowspan="2">
                                    <form action="{{ menu }}" method="GET">
                                        <input type="hidden" name="id" value="{{ item.Id }}">
                                        Aantal: <br/><input class="amount" type="number" name="quantity" value="Aantal" min=0>
                                        <input type="submit" value="+">
                                    </form>
                                </td>
                            </tr>
                            <tr>
                                <td>Prijs: €{{ item.Price }}</td>
                            </tr>

                            </tr>
                        </table>
                    </div><br/>
            {%  endfor %}
        </div>
    </span>

    <span id="order">
            <h4>UW BESTELLING</h4>
            <table>
                <tr>
                    <th id="name">Naam</th>
                    <th id="size">Maat</th>
                    <th id="qty">Hoeveelheid</th>
                    <th id="price">Prijs</th>
                    <th></th>
                </tr>
                {%  for key, item in orderlines %}
                    <tr>
                        <td>{{ item.Name }}</td>
                        <td>
                            {% if item.Size != "N" %}
                                {{ item.size }}
                            {% else %} /
                            {% endif %}</td>
                        <td>{{ item.Quantity }}</td>
                        <td>{{ item.Price }}</td>
                        <td id="delete"><a href="{{ menu }}?action=del&item={{ key }}"><img src="{{ path("/img/minus.png") }}"/> </a></td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="3">Totaal: </td>
                    <td>€{{ totPrice }}</td><td></td>
                </tr>
            </table><br/>
            <form action="{{ menu }}" method="GET">
                <input type="submit" name="action" value="reset">
                <input type="submit" name="action" value="bestellen">
            </form>
    </span>
</section>

<section class="container footer">
    <footer class="footer">
        <p>&#169; Dries Hooghe - Dit is een oefening voor de VDAB opleiding 'PHP Ontwikkelaar'</p>
    </footer>
</section>



</body>
</html>