<!doctype html>
<!--resources/views/login.twig-->
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Polito's</title>
    <link rel="stylesheet" href="{{ path('/public/style/css/main.css') }}" type="text/css"/>

</head>
<body>
    <header class="container">
        <nav>
            <label for="menu-toggle" id="navlabel"><img src="{{ path("/img/navbar-toggle-dark.svg") }}" alt=""></label>
            <input type="checkbox" id="menu-toggle"/>
            <ul id="menu">
                <li><a href="{{ home }}">HOME</a></li>
                <li class="active"><a class="active" href="{{ login }}">INLOGGEN</a></li>
                <li class="header_logo"><img src="{{ path("/img/pp_logo_font.svg") }}" alt=""></li>
                <li><a href="{{ menu }}">BESTELLEN</a></li>
                <li><a href="{{ info }}">INFO</a></li>
            </ul>
        </nav>
        <section class="subheader">
            <div></div>
            <div><img id="logo" src="{{ path("/img/pp_logo_font_original.svg") }}" alt=""></div>
            <div></div>
        </section>
    </header>

    <section class="container-sm content">
        <div class="column col6">
            <h3>Ik heb een account:</h3>
            {% if wrongPwd is not empty and wrongPwd %}
                <p>U gaf een verkeerde gebruikersnaam of wachtwoord, probeer opnieuw</p>
            {% endif %}
            <form action="{{ login }}" method="POST">
                Email: <input type="text" name="email" value="{{ custEmail }}" required="required"><br/><br/>
                Password: <input type="password" name="pwd" required="required"><br/><br/>
                <input type="submit" value="Login">
            </form>
        </div>

        <div class="column offset1 col5">
            <h3>Ik heb geen account:</h3>
            <form action="{{ register }}" method="GET">
                <input type="submit" value="Registreer">
            </form>
        </div>
    </section>

</body>
</html>