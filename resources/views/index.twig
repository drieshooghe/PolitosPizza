<!doctype html>
<!--resources/views/index.twig-->
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Polito's</title>
    <link rel="stylesheet" href="{{ path('/public/style/css/main.css') }}" type="text/css"/>
</head>
    <body>
        <header class="container">
            <nav>
                <label for="menu-toggle" id="navlabel"><img src="{{ path("/img/navbar-toggle-dark.svg") }}" alt=""></label>
                <input type="checkbox" id="menu-toggle"/>
                <ul id="menu">
                    <li class="active"><a class="active" href="{{ home }}">HOME</a></li>
                    <li><a href="{{ login }}">INLOGGEN</a></li>
                    <li class="header_logo"><img src="{{ path("/img/pp_logo_font.svg") }}" alt=""></li>
                    <li><a href="{{ menu }}">BESTELLEN</a></li>
                    <li><a href="{{ info }}">INFO</a></li>
                </ul>
            </nav>
            <section class="subheader">
                <div><h4><a href="{{ login }}">{{  loginValue }}</a></h4></div>
                <div></div>
                <div><img src="{{ path("/img/" ~ status ~ ".svg") }}" /></div>
            </section>
        </header>

        {% if placedorder %}
            <div id="thanks"><h3>{{ placedorder }}</h3></div>
        {%  endif %}

        <section class="container-sm content">

            <h3><a href="{{ login }}">{{  loginValue }}</a></h3>

            <h1>Welkom</h1>

            <div>
                <h1><a href="{{ menu }}">BESTELLEN</a></h1>
            </div>
        </section>

        <section class="container footer">
                <footer class="footer">
                    <p>&#169; Dries Hooghe</p>
                </footer>
        </section>

    </body>
</html>

